# ============================================
# Externe Blacklist-Quellen - BEISPIELDATEI
# ============================================
#
# WICHTIG: Kopiere diese Datei zu "blacklist_sources.yaml" und passe sie an!
# cp data/lists/blacklist_sources.yaml.example data/lists/blacklist_sources.yaml
#
# Diese Datei definiert externe Blacklist-Provider.
# Bearbeite die YAML-Datei um Quellen zu aktivieren/deaktivieren oder eigene hinzuzufügen.
#
# Format pro Quelle:
#   name_der_quelle:
#     url: "https://example.com/list.txt"
#     type: "ip"           # ip, ip_cidr, domain oder email
#     description: "Beschreibung der Liste"
#     enabled: true        # true = aktiviert, false = deaktiviert
#
# Unterstützte Typen:
#   - ip: Einfache IP-Adressen (z.B. 192.168.1.1)
#   - ip_cidr: IP-Bereiche in CIDR-Notation (z.B. 192.168.1.0/24)
#   - domain: Domain-Namen (z.B. spam-domain.com)
#   - email: E-Mail-Adressen (z.B. spam@example.com)

# ============================================
# AKTIVE QUELLEN (Standard)
# ============================================

spamhaus_drop:
  url: "https://www.spamhaus.org/drop/drop.txt"
  type: "ip_cidr"
  description: "Spamhaus DROP (Don't Route Or Peer) List"
  enabled: true

blocklist_de:
  url: "https://lists.blocklist.de/lists/all.txt"
  type: "ip"
  description: "Blocklist.de - All IP addresses"
  enabled: true

# ============================================
# OPTIONALE QUELLEN
# ============================================
# Setze "enabled: true" um diese Listen zu aktivieren

spamhaus_edrop:
  url: "https://www.spamhaus.org/drop/edrop.txt"
  type: "ip_cidr"
  description: "Spamhaus EDROP (Extended DROP)"
  enabled: false

abuse_ch_urlhaus:
  url: "https://urlhaus.abuse.ch/downloads/text/"
  type: "domain"
  description: "Abuse.ch URLhaus - Malicious URLs"
  enabled: false

matomo_referrer_spam:
  url: "https://raw.githubusercontent.com/matomo-org/referrer-spam-list/master/spammers.txt"
  type: "domain"
  description: "Matomo Referrer Spam Domain List"
  enabled: false

stopforumspam:
  url: "https://www.stopforumspam.com/downloads/toxic_domains_whole.txt"
  type: "domain"
  description: "StopForumSpam - Toxic Domains"
  enabled: false

firebog_advertisers:
  url: "https://v.firebog.net/hosts/Easylist.txt"
  type: "domain"
  description: "Firebog - Advertising Domains"
  enabled: false

firebog_malicious:
  url: "https://v.firebog.net/hosts/Prigent-Malware.txt"
  type: "domain"
  description: "Firebog - Malicious Domains"
  enabled: false

dispose_email:
  url: "https://raw.githubusercontent.com/disposable-email-domains/disposable-email-domains/master/disposable_email_blocklist.conf"
  type: "domain"
  description: "Disposable Email Domains"
  enabled: false

dnsbl_sorbs:
  url: "http://www.dnsbl.sorbs.net/data/smtp.txt"
  type: "ip"
  description: "SORBS SMTP Spam Sources"
  enabled: false

