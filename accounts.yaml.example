# ============================================
# E-Mail Accounts Konfiguration (BEISPIEL)
# ============================================
# Kopiere diese Datei zu accounts.yaml und passe die Daten an!
# 
# üí° Hilfe beim Setup:
#    python scripts/list_folders.py
#    
#    Zeigt die Ordnerstruktur deiner E-Mail-Konten an und
#    hilft dir, den richtigen Spam-Ordner-Namen zu finden!

accounts:
  # ========================================
  # Beispiel-Accounts (h√§ufigste Provider)
  # ========================================

  # ----------------------------------------
  # Generischer IMAP-Account
  # ----------------------------------------
  - name: "Mein E-Mail Account"
    user: "deine@email.de"
    password: "dein-passwort"
    server: "imap.provider.de"
    port: 993
    spam_folder: "Spam"
    enabled: true

  # ----------------------------------------
  # Gmail
  # ----------------------------------------
  # ‚ö†Ô∏è  WICHTIG: Gmail ben√∂tigt ein App-Passwort!
  #     1. 2-Faktor-Authentifizierung aktivieren
  #     2. App-Passwort erstellen: https://myaccount.google.com/apppasswords
  #     3. App-Passwort hier eintragen (NICHT normales Passwort!)
  - name: "Gmail"
    user: "deine@gmail.com"
    password: "app-passwort-16-zeichen"
    server: "imap.gmail.com"
    port: 993
    spam_folder: "[Gmail]/Spam"  # Mit Klammern und Slash
    enabled: false

  # ----------------------------------------
  # GMX
  # ----------------------------------------
  - name: "GMX"
    user: "deine@gmx.de"
    password: "passwort"
    server: "imap.gmx.net"
    port: 993
    spam_folder: "Spamverdacht"  # GMX-spezifischer Name
    enabled: false

  # ----------------------------------------
  # Web.de
  # ----------------------------------------
  - name: "Web.de"
    user: "deine@web.de"
    password: "passwort"
    server: "imap.web.de"
    port: 993
    spam_folder: "Spamverdacht"  # Wie GMX
    enabled: false

  # ----------------------------------------
  # Yahoo Mail
  # ----------------------------------------
  # ‚ö†Ô∏è  Bei aktivierter 2FA: App-Passwort erforderlich!
  #     Erstellen: https://login.yahoo.com/account/security
  - name: "Yahoo"
    user: "deine@yahoo.com"
    password: "app-passwort-oder-normales-passwort"
    server: "imap.mail.yahoo.com"
    port: 993
    spam_folder: "Bulk Mail"  # Yahoo nutzt "Bulk Mail"
    enabled: false

  # ----------------------------------------
  # Apple iCloud Mail
  # ----------------------------------------
  # ‚ö†Ô∏è  WICHTIG: iCloud ben√∂tigt ein App-Passwort!
  #     1. Gehe zu https://appleid.apple.com/
  #     2. Anmelden ‚Üí Sicherheit ‚Üí App-spezifische Passw√∂rter
  #     3. Neues Passwort f√ºr "Mail" erstellen
  - name: "iCloud"
    user: "deine@icloud.com"  # oder @me.com
    password: "app-spezifisches-passwort"
    server: "imap.mail.me.com"
    port: 993
    spam_folder: "Junk"
    enabled: false


